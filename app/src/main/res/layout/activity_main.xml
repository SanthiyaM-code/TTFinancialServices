<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include layout="@layout/custom_toolbar" />

    <com.luseen.spacenavigation.SpaceNavigationView
        android:id="@+id/space"
        android:layout_width="396dp"
        android:layout_height="41dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        app:active_item_color="@color/greeen"
        app:centre_button_color="@color/greeen"
        app:centre_button_icon="@drawable/ic_baseline_call_24"
        app:inactive_item_color="@android:color/darker_gray"
        app:space_background_color="@color/spacegreen"

        app:space_item_icon_only_size="@dimen/space_item_icon_only_size"
        app:space_item_icon_size="@dimen/space_item_icon_default_size"
        app:space_item_text_size="@dimen/space_item_text_default_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="30dp">

            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/imageSlider"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:sliderIndicatorSelectedColor="@color/greeen" />
        </androidx.cardview.widget.CardView>

        <ScrollView
            android:layout_width="392dp"
            android:layout_height="120dp">

            <HorizontalScrollView

                android:layout_width="392dp"
                android:layout_height="144dp"

                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:orientation="horizontal">


                    <ImageButton
                        android:id="@+id/homebt"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/round"
                        android:src="@drawable/home_loan" />

                    <ImageButton

                        android:id="@+id/eduic"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/round"
                        android:src="@drawable/edu_loan" />

                    <ImageButton
                        android:id="@+id/goldic"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/round"
                        android:src="@drawable/goldloan" />

                    <ImageButton
                        android:id="@+id/caric"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/round"
                        android:src="@drawable/vehicloan" />

                    <ImageButton
                        android:id="@+id/buildic"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/round"
                        android:src="@drawable/buissiness" />

                    <ImageButton
                        android:id="@+id/womenic"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/round"
                        android:src="@drawable/womenloan" />

                </LinearLayout>

            </HorizontalScrollView>
        </ScrollView>
    </LinearLayout>


</RelativeLayout>